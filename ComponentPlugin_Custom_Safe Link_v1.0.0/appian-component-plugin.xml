<?xml version="1.1" encoding="UTF-8"?>
<appian-component-plugin name="Custom Safe Link" key="com.coforge.plugin.component.customSafeLink">
  <plugin-info>
    <description>Custom safe Link that allows perform save operation</description>
    <vendor name="Leelark Saxena" url="http://www.coforge.com" />
    <support supported="false" url="http://www.coforge.com"/>
    <version>1.0.0</version>
  </plugin-info>

  <component rule-name="customSafeLink" version="1.1.0">
    <sdk-version>2.0.0</sdk-version>
    <icon-name>chain</icon-name>
    <parameter>
      <name>label</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>url</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
   <parameter>
      <name>isLinkClicked</name>
      <category>event</category>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
  </component>


</appian-component-plugin>
